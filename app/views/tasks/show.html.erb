<h1><%= @task.title %></h1>
<%= link_to 'edit this task', edit_task_path %>
<h2><%= @task.details %></h2>
<p>
	<% if @task.completed == true%>
		<i class="fas fa-square"></i> This task is completed
	<% else %>
		<i class="far fa-square"></i> This task is not completed yet
	<% end %>
</p>

<%= link_to 'back to list', tasks_path %>